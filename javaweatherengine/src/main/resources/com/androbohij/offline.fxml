<BorderPane prefHeight="900.0" prefWidth="1180.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.androbohij.OfflineHandler">
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
   <right>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="textBold" stylesheets="@style/styles.css" text="The program failed to resolve the API host" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
               <padding>
                  <Insets top="200.0" />
               </padding>
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label layoutX="97.0" layoutY="10.0" styleClass="h3text" stylesheets="@style/styles.css" text="internet may not be available, please check your connection and refresh" textOverrun="CLIP" wrapText="true"/>
            <Button mnemonicParsing="false" onAction="#goRefresh" text="Refresh">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </center>
